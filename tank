#include <SFML/Graphics.hpp>
#include <ctime>

int main()
{
 sf::RenderWindow window(sf::VideoMode(800, 800), "SFML works!");
 //sf::CircleShape shape(100.f);
 //shape.setFillColor(sf::Color::Green);



 sf::Texture tankT;
 if (!tankT.loadFromFile("tank2.png"))
 return EXIT_FAILURE;

 sf::Sprite tankS;
 tankS.setTexture(tankT);
 tankS.setOrigin(273 / 2, 102 / 2);
 tankS.setRotation(-90);
 tankS.setPosition(400,400);

 

 sf::Texture backT;
 if (!backT.loadFromFile("back5.png"))
 return EXIT_FAILURE;
 //backT.setRepeated(true);


 sf::Sprite backS;
 backS.setTexture(backT);
 backS.setOrigin(1801 / 2, 1102 / 2);
 backS.setPosition(400, 400);
 //const float tankSpeed = 100;

 //sf::Clock clock;


 while (window.isOpen())
 {

 //float deltaTime = clock.restart().asSeconds();
 sf::Event event;
 

 while (window.pollEvent(event))
 {
 if (event.type == sf::Event::Closed)
 window.close();

 if (sf::Keyboard::isKeyPressed(sf::Keyboard::Down))
 backS.move(0, -10);
 if (sf::Keyboard::isKeyPressed(sf::Keyboard::Up))
 backS.move(0, 10);
 if (sf::Keyboard::isKeyPressed(sf::Keyboard::Left))
 backS.rotate(1);
 if (sf::Keyboard::isKeyPressed(sf::Keyboard::Right))
 backS.rotate(-1);
 }

 window.clear();
 //window.draw(shape);
 window.draw(backS);
 window.draw(tankS);
 window.display();
 }

 return 0;
}
